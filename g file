
import random

emojis = {'rock': 'ü™®', 'paper': 'üìÑ', 'scissors': '‚úÇÔ∏è'}
choices = list(emojis.keys())  # Dodaj nawiasy po `keys()` ‚Äî kluczowy b≈ÇƒÖd!

while True:
    user_choice = input("Choose (rock, paper, scissors): ")
    computer_choice = random.choice(choices)
    
    if user_choice not in choices:
        print("You want to choose what?!")
        continue  # Kontynuuj zamiast wychodziƒá z gry
    
    print(f"You chose {emojis[user_choice]}")
    print(f"Computer chose {emojis[computer_choice]}")
    
    if user_choice == computer_choice:
        print("Draw!")
    elif (user_choice == 'rock' and computer_choice == 'scissors') or \
         (user_choice == 'paper' and computer_choice == 'rock') or \
         (user_choice == 'scissors' and computer_choice == 'paper'):
        print("You win!")
    else:
        print("You lose!")
    
    play_again = input("Play once more? (yes/no): ")
    if play_again.lower() != 'yes':
        print("Thanks for playing!")
        break
    else: 
        print("Let's go")

# good

